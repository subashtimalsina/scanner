<?xml version='1.0' encoding='utf-8'?>
<widget id="" version="1.2.92" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>WellnessXperts Cafe Smarthub</name>
    <description>
        Wizworks Smarthub App
    </description>
    <author email="wellnessxperts.hk@gmail.com" href="http://www.wellnessnetwork.me">
        WellnessXperts
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="EnableViewportScale" value="true" />
    <preference name="SplashScreenDelay" value="0" />
    <preference name="FadeSplashScreen" value="false" />
    <preference name="FadeSplashScreenDuration" value="0" />
    <gap:plugin name="com.phonegap.plugin.statusbar" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="resources/android/mipmap-ldpi/ic_launcher.png" />
        <icon density="mdpi" src="resources/android/mipmap-mdpi/ic_launcher.png" />
        <icon density="hdpi" src="resources/android/mipmap-hdpi/ic_launcher.png" />
        <icon density="xhdpi" src="resources/android/mipmap-xhdpi/ic_launcher.png" />
        <icon density="xxhdpi" src="resources/android/mipmap-xxhdpi/ic_launcher.png" />
        <icon density="xxxhdpi" src="resources/android/mipmap-xxxhdpi/ic_launcher.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon height="57" src="resources/ios/Icon.png" width="57" />
        <icon height="114" src="resources/ios/Icon@2x.png" width="114" />
        <icon height="40" src="resources/ios/AppIcon.appiconset/Icon-40.png" width="40" />
        <icon height="80" src="resources/ios/AppIcon.appiconset/Icon-40@2x.png" width="80" />
        <icon height="50" src="resources/ios/Icon-Small-50.png" width="50" />
        <icon height="100" src="resources/ios/Icon-Small-50@2x.png" width="100" />
        <icon height="60" src="resources/ios/Icon-60.png" width="60" />
        <icon height="120" src="resources/ios/AppIcon.appiconset/Icon-60@2x.png" width="120" />
        <icon height="180" src="resources/ios/AppIcon.appiconset/Icon-60@3x.png" width="180" />
        <icon height="72" src="resources/ios/Icon-72.png" width="72" />
        <icon height="144" src="resources/ios/Icon-72@2x.png" width="144" />
        <icon height="76" src="resources/ios/AppIcon.appiconset/Icon-76.png" width="76" />
        <icon height="152" src="resources/ios/AppIcon.appiconset/Icon-76@2x.png" width="152" />
        <icon height="29" src="resources/ios/AppIcon.appiconset/Icon-small.png" width="29" />
        <icon height="58" src="resources/ios/AppIcon.appiconset/Icon-small@2x.png" width="58" />
        <icon height="87" src="resources/ios/AppIcon.appiconset/Icon-small@3x.png" width="87" />
        <splash height="480" src="resources/ios/splash.png" width="320" />
        <hook src="hooks/iosrtc-swift-support.js" type="after_platform_add" />
        <edit-config file="*-Info.plist" mode="merge" target="NSCameraUsageDescription">
            <string>Your camera is needed to scan QR codes.</string>
        </edit-config>
    </platform>
    <engine name="ios" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.2" />
    <plugin name="cordova-plugin-disable-ios11-statusbar" spec="^1.0.0" />
    <plugin name="cordova-sqlite-storage" spec="^2.3.2" />
    <plugin name="cordova-plugin-iosrtc" spec="^4.0.2" />
    <plugin name="cordova-plugin-android-permissions" spec="^1.0.0" />
    <plugin name="cordova-plugin-camera" spec="^4.0.3" />
    <plugin name="cordova-plugin-qrscanner" spec="^2.6.0" />
    <plugin name="phonegap-plugin-barcodescanner" spec="^8.0.0">
        <variable name="ANDROID_SUPPORT_V4_VERSION" value="27.1.1" />
    </plugin>
    <plugin name="cordova-plugin-viewport" spec="^1.0.3" />
    <engine name="android" spec="^7.0.0" />
</widget>
